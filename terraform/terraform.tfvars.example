# Project Bedrock - Terraform Variables
# Copy this file to terraform.tfvars and customize as needed

# AWS Configuration
aws_region = "us-east-1"

# EKS Cluster Configuration
cluster_name       = "project-bedrock-cluster"
kubernetes_version = "1.31"

# VPC Configuration
vpc_name = "project-bedrock-vpc"
vpc_cidr = "10.0.0.0/16"

# Subnets (must match VPC CIDR)
private_subnets = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets  = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# Node Group Configuration
instance_types = ["t3.medium"]
min_size       = 1
desired_size   = 2
max_size       = 10
capacity_type  = "ON_DEMAND"

# Project Configuration
student_id          = "ALT-SOE-025-0223"
developer_username  = "bedrock-dev-view"
lambda_function_name = "bedrock-asset-processor"
app_namespace       = "retail-app"

# Logging Configuration
enable_control_plane_logging = true
control_plane_log_types     = ["api", "audit", "authenticator", "controllerManager", "scheduler"]